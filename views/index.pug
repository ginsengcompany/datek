doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        title DATEK
        // Font Awesome
        link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.8.2/css/all.css')
        // Bootstrap core CSS
        link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
        // Material Design Bootstrap
        link(href='/stylesheets/mdb.min.css', rel='stylesheet')
        // Your custom styles (optional)
        link(href='/stylesheets/style.css', rel='stylesheet')
    body
        nav.navbar.navbar-light.lighten-4
            a.navbar-brand(style='color: white') DATEK
        .container
            .row(style='margin-bottom: 110px; margin-top: 110px')
                .col-md-3
                .col-md-6
                    // Default form login
                    form.text-center.border.border-light.p-5(method='post' action='/login')
                        p.h4.mb-4(style='color: #213F55') Login
                        // Username
                        input.form-control.mb-4(type='text', name='username', placeholder='Username')
                        // Password
                        input.form-control.mb-4(type='password', name='password', placeholder='Password')
                        .d-flex.justify-content-around
                            div.text-center
                                // Forgot password
                                a(href='/reset' style='color: #213F55') Password dimeticata?
                        // Sign in button
                        button.btn.btn-block.my-4(type='submit' value='Login' style='background-color: #213F55; color: #ffffff') Accedi
                        div.text-center
                            a(href='signup' style='color: #213F55') Registrati
                    // Default form login
                .col-md-3
    // /.Navbar
    // SCRIPTS
    // JQuery
    include footer
    script(type='text/javascript', src='/javascript/jquery-3.4.1.min.js')
    // Bootstrap tooltips
    script(type='text/javascript', src='/javascript/popper.min.js')
    // Bootstrap core JavaScript
    script(type='text/javascript', src='/javascript/bootstrap.min.js')
    // MDB core JavaScript
    script(type='text/javascript', src='/javascript/mdb.min.js')
