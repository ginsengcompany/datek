    body
        nav.navbar.navbar-light.lighten-4
            a.navbar-brand(href='home', style='color: white') DATEK
            button.navbar-toggler.toggler-example(type='button', data-toggle='collapse', data-target='#navbarSupportedContent1', aria-controls='navbarSupportedContent1', aria-expanded='false', aria-label='Toggle navigation', style='color: white')
